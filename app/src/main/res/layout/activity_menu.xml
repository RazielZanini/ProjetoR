<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/background"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/logo"
        android:src="@drawable/projeto_r_logo"
        android:contentDescription="Logo do projeto"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/new_game"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button"
        android:text="Novo Jogo"
        android:textColor="#0E151B"
        android:textSize="50px"
        android:textFontWeight="700"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/load_game"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button"
        android:text="CARREGAR JOGO"
        android:textColor="#0E151B"
        android:textSize="50px"
        android:textFontWeight="700"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/quitApp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/load_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button"
        android:text="Sair"
        android:textColor="#0E151B"
        android:textSize="50px"
        android:textFontWeight="700"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criado por Raziel Zanini. Em desenvolvimento"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>